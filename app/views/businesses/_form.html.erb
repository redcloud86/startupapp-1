<%= simple_form_for(@business) do |f| %>
  <%= f.error_notification %>

  
  	<div class="form-group">
    <%= f.input :name, input_html: { class: 'form-control'} %>
  	</div>		
  	<div class="form-group">
    <%= f.input :tagline, input_html: { class: 'form-control'} %>
  	</div>		
  	<div class="form-group">
    <%= f.input :decription, input_html: { class: 'form-control'} %>
  	</div>		
  	<div class="form-group">
    <%= f.input :url, input_html: { class: 'form-control'} %>
  	</div>		
  	<div class="form-group">
    <%= f.input :owner_id, input_html: { class: 'form-control'} %>
  	</div>		


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
